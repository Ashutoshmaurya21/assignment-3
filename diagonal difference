#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n ,i,j;
    int sum1=0,sum2=0;
    cin>>n;
    int a[n][n];
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
        cin>>a[i][j];
        if(i==j)
        {
            sum1=sum1+a[i][j];
        }
     }
    }
     
    for(int i=0;i<n;i++) {
    for(int j=n-1-i;j>=0;){
   sum2=sum2+a[i][j];
    break;
    }
 }
cout<<abs(sum1-sum2)<<endl;
 return 0;
  }

